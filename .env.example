# CVD AI Planogram Enhancement System - Environment Variables

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.py
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///data/cvd.db

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379/0

# AI Services Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional: Advanced AI Configuration
AI_MODEL_DEFAULT=claude-3-haiku-20240307
AI_MODEL_ADVANCED=claude-3-opus-20240229
AI_MAX_TOKENS=1000
AI_TEMPERATURE=0.3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/cvd.log

# Security Configuration
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
PASSWORD_MIN_LENGTH=8

# Performance Configuration
CACHE_TTL_L1=300
CACHE_TTL_L2=3600
CACHE_TTL_L3=86400

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_HEAT_MAPS=true
ENABLE_REVENUE_PREDICTION=true
ENABLE_AUTO_OPTIMIZATION=true
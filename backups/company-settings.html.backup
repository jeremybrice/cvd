                </tr>
            `;
            const dataRows = data.map(product => `
                <tr>
                    <td>
                        ${product.image 
                            ? `<img src="${escapeHtml(product.image)}" alt="${escapeHtml(product.name)}" class="image-preview" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
